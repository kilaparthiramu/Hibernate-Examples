package com.kilaparthi;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

public class Main {
	public static void main(String[] args)throws Exception
	{
		Configuration conf = new Configuration();
		conf.configure("hibernate.cfg.xml");
	    SessionFactory factory=conf.buildSessionFactory();
	    Session session=factory.openSession();
	    Object o = session.load(Product.class, 102);
	    Product product = (Product)o;
	    System.out.println("pid:"+product.getProductId());
	    System.out.println("pname:"+product.getProductName());
	    System.out.println("price:"+product.getPrice());
	   /* product.setProductId(102);
	    product.setProductName("kumar");
	    product.setPrice(6000);*/
	    Transaction tx=session.beginTransaction();
	    session.update(product);
	    tx.commit();
	    session.close();
	    factory.close();
	}
}
